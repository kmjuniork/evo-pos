<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_form_evopos" model="ir.ui.view">
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="category_ids" position="after">
                    <div>
                        <label for="is_default"/>
                        <field name="is_default"/>
                    </div>
                </field>
                <field name="work_phone" position="after">
                    <field name="work_shift"/>
                </field>
                <field name="department_id" position="before">
                    <field name="date_join"/>
                    <field name="date_termination"/>
                </field>
            </field>
        </record>

        <record id="hr_employee_view_search_evo" model="ir.ui.view">
            <field name="name">hr.employee search</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='category_ids']" position="after">
                        <filter name="filter_terminated" string="Terminated"
                                domain="[('date_termination','!=',False)]"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>